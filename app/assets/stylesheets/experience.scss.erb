$background-color: <%= BACKGROUND_COLOR %>;

article.experience {
  margin-bottom: 2em;
  border-top: 1px solid darken(#ffffff, 50%);
  &:first-of-type {
    padding-top: 0;
    border: none;
  }
  padding-top: 1em;
  .title, .name, .dates {
    display: inline-block;
  }
  .title {
    font-weight: 900;
    margin-right: 1.5em;
  }
  .name {
    margin-right: 1.5em;
  }

}

.skill {
  display: inline-block;
  background-color: lighten($background-color, 10%);
  color: lighten($background-color, 70%);
  border-radius: 3px;
  padding: 0.03em 0.6em;
  line-height: 1.5;
  font-size: 0.8em;
  margin: 0.2em 0.2em;
  vertical-align: middle;
}

.skillsets {
  .skill {
    font-size: 1em;
    font-weight: 900;
    color: lighten($background-color, 80%);
  }
}

table.experiences {
  th, td {
    &.actions {
      text-align: right;
    }
  }
}
