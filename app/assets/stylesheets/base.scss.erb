$background-color: <%= BACKGROUND_COLOR %>;

* {
  font-family: "Inter var", ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
}

body {
  margin-top: 3em;
  background-color: $background-color;
  color: #fff !important;
  font-size: 18px;
}

table.table {
  color: #fff;
}

#home {
  h1 {
    &.name {
      font-size: 4.5em;
      margin-bottom: 0;
      line-height: 1.1;
    }
  }
  section.contact {
    margin-bottom: 6em;
  }
  h2 {
    margin-bottom: 1em;
    font-size: 2em;
  }
  section {
    margin-bottom: 4em;
  }
}

h1 {
  margin-bottom: 2em;
  font-size: 3.5em;
}

footer {
  margin: 7em 0;
  font-size: 14px;
}

a, ul.nav a {
  color: lighten($background-color, 60%);
  text-decoration: none;
}

.copyright {
  border-top: 1px solid darken(#ffffff, 60%);
  padding-top: 0.75em;
  margin-top: 0.75em;
}

