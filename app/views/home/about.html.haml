%h1.text-slate-800.dark:text-slate-100.font-bold.tracking-tight.mb-10.text-4xl.md:text-5xl(class='md:w-4/5')
  %div.leading-tight.md:leading-tight= Setting.first.about_headline

- if Setting.first.about_subheading.present?
  %h2.text-xl.mb-20.max-w-prose.text-slate-500
    = Setting.first.about_subheading

- else
  %div.mb-10 &nbsp;

%div.flex.justify-center.mb-10
  %div
    %h2.font-medium.text-lg.aline-middle
      = link_to asset_path('resume.pdf'), download: 'resume.pdf', target: '_blank' do
        .inline-block.align-middle.text-slate-500 Resume
        .inline-block.align-middle= image_tag 'download.svg', width: '19px', class: 'inline-block align-middle text-slate-500'

%div.flex.justify-center
  - if Setting&.first&.linkedin_url.present?
    %div.inline-block.mr-3
      = link_to Setting&.first&.linkedin_url, target: '_blank', class: 'inline-block align-middle text-slate-500' do
        = image_tag 'linkedin.svg', width: '24px'
  - if Setting&.first&.github_url.present?
    %div.inline-block
      = link_to Setting&.first&.github_url, target: '_blank', class: 'inline-block align-middle text-slate-500' do
        = image_tag 'github.svg', width: '24px'

%div.flex.justify-center
  .font-medium
    - if Setting&.first&.email.present?
      = link_to Setting&.first&.email do
        %div.mr-3
          = render 'shared/email_svg'
      = link_to "mailto: #{Setting&.first&.email}", class: 'text-slate-900' do
        %div
          = Setting&.first&.email

  .font-medium
    - if Setting&.first&.phone.present?
      %div.mr-3.fill-slate-500
        = render 'shared/phone_svg'
      %div
        = Setting&.first&.phone


