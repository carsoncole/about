%div.mx-5
  %div
    %h1.text-6xl.font-bold.mb-6= Setting&.first&.name || 'Name'

    %h2.description.mb-7= Setting&.first&.description || 'Description'

  %div
    %section.contact.mb-7
      = Setting&.first&.email || 'email'
      - if Setting&.first&.phone.present?
        \|
        = Setting&.first&.phone || 'phone'
      - if Setting&.first&.address.present?
        \|
        = Setting&.first&.address
      %br
      - if Setting&.first&.linkedin_url.present?
        = link_to Setting&.first&.linkedin_url, Setting&.first&.linkedin_url
      - if Setting&.first&.portfolio_url.present?
        \|
        = link_to Setting&.first&.portfolio_url, Setting&.first&.portfolio_url

  %div
    - if Setting&.first&.summary.present?
      %div
        %h2.text-indigo-400.font-bold.mb-2.font-2xl.uppercase.border-b.border-indigo-900.mb-4.pb-2 Summary
        %p.mb-7= Setting.first.summary

    - if PROJECTS_DISPLAYED
      %div
        %h2.text-indigo-400.font-bold.mb-2.font-2xl.uppercase.border-b.border-indigo-900.mb-4.pb-2 Open-Source Projects
        .carousel
          = render partial: 'projects/project', collection: @projects

    - if SKILLSETS_DISPLAYED
      %div

        %h2.text-indigo-400.font-bold.mb-2.font-2xl.uppercase.border-b.border-indigo-900.mb-4.pb-2 Skills

        - @tags.each do |tag|
          .skill= tag.name

    - if EXPERIENCES_DISPLAYED
      %div
        %h2.text-indigo-400.font-bold.mb-2.font-2xl.uppercase.border-b.border-indigo-900.mb-4.pb-2 Experience
        = render partial: 'experience', collection: @experiences

      %div
        %h2.text-indigo-400.font-bold.mb-2.font-2xl.uppercase.border-b.border-indigo-900.mb-4.pb-2 Education
        = render partial: 'education', collection: @educations



  / .row
  /   .col-md-12
  /     .resume-link
  /       = link_to "Download Resume", resume_path(format: :pdf), target: '_blank'
  /       %i.far.fa-arrow-alt-circle-down
