= form_for [:admin, @education] do |f|
  - if @education.errors.any?
    #error_explanation
      %h2= "#{pluralize(@education.errors.count, "error")} prohibited this education from being saved:"
      %ul
        - @education.errors.full_messages.each do |message|
          %li= message

  .form-group.mb-3
    .mb-2= f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group.mb-3
    .mb-2= f.label :title
    = f.text_field :title, class: 'form-control'
  .form-group.mb-3
    .mb-2= f.label :start_date
    = f.date_field :start_date, class: 'form-control'
  .form-group.mb-3
    .mb-2= f.label :end_date
    = f.date_field :end_date, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
