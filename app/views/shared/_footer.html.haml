%footer.mt-6
  %div.lg:flex

    %nav.flex.justify-center.md:justify-start.space-x-2.md:space-x-4.p-2.mb-10.md:mb-20(class='dark:bg-slate-800/90')

      = render 'shared/nav_items'

      - if signed_in?
        %span.text-center.text-slate-200= '|'
        - if Setting.first
          %span.p-1= link_to "Admin", admin_experiences_path, class: 'text-slate-800 dark:text-slate-200 hover:text-teal-500 dark:hover:text-slate-850'
        - else
          %span.p-1= link_to "Settings", new_admin_setting_path, class: 'text-slate-800 dark:text-slate-200 hover:text-teal-500 dark:hover:text-slate-850'

        %span.p-1= link_to "Sign out", sign_out_path, method: :delete, data: { "turbo-method": :delete }, class: 'text-slate-800 dark:text-slate-200 hover:text-teal-500 dark:hover:text-slate-850'
    %div.text-sm.flex-auto.text-center.lg:text-end.tracking-tight.text-slate-500
      - if Setting&.first&.linkedin_url.present?
        %div.inline-block
          = link_to Setting&.first&.linkedin_url, target: '_blank', class: 'inline-block align-middle' do
            = image_tag 'linkedin.svg', width: '24px', class: 'text-slate-100'
      - if Setting&.first&.github_url.present?
        %div.inline-block
          = link_to Setting&.first&.github_url, target: '_blank', class: 'inline-block align-middle' do
            = image_tag 'github.svg', width: '24px', class: 'text-slate-400'

      &copy
      = Time.now.year.to_s
      Carson Cole




